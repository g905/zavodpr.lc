extends ../includes/layout
include ../includes/mixins

block content
    - let crumbs = [{"href": "#", "title": "Главная"}, {"href": "#", "title": "Доставка"}]
    +breadcrumbs(crumbs)

    section#delivery.mb-5
        .container
            .title.mb-5
                h3 Доставка
            .delivery-img.mb-5
                img.img-fluid(src="img/Доставка/banner-6.png")
            .delivery-tabs
                nav
                    .nav.nav-tabs.mb-5#nav-tab(role="tablist")
                        a.nav-item.nav-link.active#nav-home-tab(data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true") Способы доставки
                        a.nav-item.nav-link#nav-profile-tab(data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false") Условия отгрузки
                        a.nav-item.nav-link#nav-contact-tab(data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false") Доставка в другие страны
                .tab-content.mb-5#nav-tabContent
                    .tab-pane.fade.show.active#nav-home(role="tabpanel" aria-labelledby="nav-home-tab")
                        h4 Транспортными компаниями
                        h4 Автомобильным транспортом
                        h4 Ж/Д Транспортом
                    .tab-pane.fade#nav-profile(role="tabpanel" aria-labelledby="nav-profile-tab")
                        h4 Комплексная
                    .tab-pane.fade#nav-contact(role="tabpanel" aria-labelledby="nav-contact-tab")
                        h4 Доставляем по РФ и СНГ
                        p Быстро, оперативно! Грузим продукцию в Казахстан, Киргизию, Узбекистан, Беларусь, Монголию, Ирак и могие другие страны! Автомобильным транспортом (как автоналив, так и доставка автотранспортом фасованной продукции) Жд-налив в цистерны – 60-65 тонн (70-80 кубов), так и контейнерная поставка (40 или 88 бочек по 165-200 кг).
            h4 Фасовка продукции
